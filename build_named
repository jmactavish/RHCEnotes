yum install bind
chkconfig named on

vi /etc/named.conf
options {
	directory "/var/named";
};
zone "." IN {
	type hint;
	file "name.ca";
};
zone "localhost" IN {
	type master;
	file "localhost.zone";
};
zone "0.0.127-addr.arpa" IN {
	tpye master;
	file "name.local";
};
:wq
vi /etc/named/localhost.zone
$TTL 600


vi /etc/named/0.0.127.arpa
dig -t NS . > /var/named/name.ca

chown :named /var/named/*


