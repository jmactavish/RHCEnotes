#'load_blancer:192.168.122.111/110(virtual), http_servers:192.168.122.211-212, '
#'visit the http group via the virtual address'

#'on load_blancer:'
service NetworkManager stop
vim ifcfg-eth0:0 #'add a virtual group ip address'
IPADDR=192.168.122.110
:wq
modprobe ip_vs
rpm -ivh ipvsadm-1.25.9.rpm
vim /etc/sysctl.conf #'add 3 lines manually'
net.ipv4.conf.all.send_redirects=0
net.ipv4.conf.default.send_redirects=0
net.ipv4.conf.eth0.send_redirects=0
:wq
sysctl -p
iptables -t nat -A POSTROUTING -s 192.168.122.0/24 -o eth0 -j SNAT --to-source 10.154.1.88
service ipvsadm stop
ipvsadm -A -t 192.168.122.110:80 -s rr #'add a load_blancer'
ipvsadm -A -t 192.168.122.110:80 -r 192.168.0.211 -g
ipvsadm -A -t 192.168.122.110:80 -r 192.168.0.212 -g
ipvadm -L -n
service ipvsadm save
chkconfig ipvsadm on

#'configure http servers:'
vim ifcfg-lo:0
ipaddr=192.168.122.110
netmask=255.255.255.255
:wq
vim /etc/sysctl.conf
net.ipv4.conf.all.arp_ignore = 1
net.ipv4.conf.all.arp_announce = 2
net.ipv4.conf.default.arp_ignore = 1
net.ipv4.conf.default.arp_announce = 2
net.ipv4.conf.lo.arp_ignore = 1
net.ipv4.conf.lo.arp_announce = 2
:wq
sysctl -p
service NetworkManager stop
route add -host 192.168.1.110 dev lo:0
