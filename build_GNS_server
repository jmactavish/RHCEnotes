nano CiscoKeyGen
#!/usr/bin/python
import os
import socket
import hashlib
import struct
hostid=os.popen("hostid").read().strip()
hostname = socket.gethostname()
ioukey=int(hostid,16)
for x in hostname:
 ioukey = ioukey + ord(x) #'take care! there is a space in the beginning of this line'
print "hostid=" + hostid +", hostname="+ hostname +", ioukey=" + hex(ioukey)[2:]
iouPad1='\x4B\x58\x21\x81\x56\x7B\x0D\xF3\x21\x43\x9B\x7E\xAC\x1D\xE6\x8A'
iouPad2='\x80' + 39*'\0'
md5input=iouPad1 + iouPad2 + struct.pack('!i' , ioukey) + iouPad1
ioulicense=hashlib.md5(md5input).hexdigest()[:16]
print "\nAdd the following text to -/.iourc:"
print "[license]\n" + hostname + " = " + ioulicense + ";\n"
#'save and quit nano'
chmod + x CiscoKeyGen
./CiscoKeyGen
nano ~/iourc.txt
#'paste the output of CiscoKeyGen into iourc.txt'
echo '127.0.0.127 xml.cisco.com' >> /etc/hosts
apt-get install --no-install-recommends gnome-panel
apt-get install gksu
gnome-desktop-item-edit /usr/share/applications/ --create-new
