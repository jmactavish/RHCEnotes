#'firstly, get a name server ready!'
#'on an IPA server:'
yum install ipa-server bind-dyndb-ldap
#'configure ipa server'
ipa-server-install --setup-dns
#'remember: capital letters at "realm name"'
authconfig --enablemkhomedir --update
chkconfig sssd on
init 6
#'setup IPA via a web browser'
#'username is admin'
#'identity -> add user'

#'on clients:'
yum install authconfig  authconfig-gtk ipa-client
vi /etc/hosts
search example.com.
nameserver 192.168.122.41
:wq
#'configure clients with GUI tools'
authconfig-gtk
#'LDAP DN: dc=exaple, dc=com'
#'LDAP server: ldap://server.example.com'
#'use TLS'
#'download CA certs: https://server.example.com/ipa/config/ca.crt'
#'damain: EXAMPLE.COM'
#'KDC: SERVER.EXAMPLE.COM'
#'management server: SERVER.EXAMPLE.COM'
ipa-client-install --domain=example.com --no-ntp --realm=EXAMPLE.COM --mkhomedir
#'input server name'
#'input "yes to confirm"'
#'have a test:'
ssh ldapuser1@client.example.com

