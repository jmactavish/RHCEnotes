#'on the server:'
yum groupinstall 'X Window System' 'Gnome Desktop' Desktop tigervnc-server
echo 'id:5:initdefault:' > /etc/inittab
chkconfig vncserver on
vncserver [:1] #'set a password for current user, now it's root in fact'
echo 'VNCSERVERS="1:root"' >> /etc/sysconfig/vncservers
init 6

#'manage clients as following:'
yum groupinstall 'X Window System' 'Gnome Desktop' Desktop tigervnc
echo 'id:5:initdefault:' > /etc/inittab
init 5
#'just start vnc from GUI menu after installation'
